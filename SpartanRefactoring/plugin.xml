<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         id="ilorg.spartan.refactoring.BuilderID"
         name="Spartanization Checker"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="il.org.spartan.refactoring.builder.Builder">
         </run>
      </builder>
   </extension>
   <extension
         id="ilorg.spartan.refactoring.NatureID"
         name="Spartanization Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="il.org.spartan.refactoring.builder.Nature">
         </run>
      </runtime>
      <builder
            id="ilorg.spartan.refactoring.BuilderID">
      </builder>
   </extension>
     <extension
     id="ilorg.spartan.refactoring.application"
     name="Spartan Refactoring Application"
     point="org.eclipse.core.runtime.applications">
     <application>
     <run class="il.org.spartan.refactoring.application.Application"></run>
     </application>
   </extension>
  <extension
        id="ilorg.spartan.refactoring.startupExtension"
        point="org.eclipse.ui.startup">
  </extension>
<extension
    id="ilorg.spartan.refactoring.spartanizationSuggestion"
    name="Spartanization Suggestion"
    point="org.eclipse.core.resources.markers">
  <super type="org.eclipse.core.resources.problemmarker" />
</extension>

   <extension point="org.eclipse.ui.ide.markerResolution">
      <markerResolutionGenerator 
               markerType="ilorg.spartan.refactoring.spartanizationSuggestion"
         class="il.org.spartan.refactoring.builder.QuickFixer"/>
   </extension>

   <extension point="org.eclipse.ui.editors.annotationTypes">
     <type markerType="ilorg.spartan.refactoring.spartanizationSuggestion" 
       name="ilorg.spartan.refactoring.spartanizationMarker" />
   </extension>
   <extension
      point="org.eclipse.ui.editors.markerAnnotationSpecification">
   <specification
         annotationType="ilorg.spartan.refactoring.spartanizationMarker"
         colorPreferenceKey="ilorg.spartan.refactoring.spartanizationMarker.color"
         colorPreferenceValue="0,0,180"
         contributesToHeader="false"
         includeOnPreferencePage="true"
         label="Spartanization Suggestion"
         overviewRulerPreferenceKey="ilorg.spartan.refactoring.spartanizationMarker.overview"
         overviewRulerPreferenceValue="true"
         presentationLayer="0"
         textPreferenceKey="ilorg.spartan.refactoring.spartanizationMarker.text"
         textPreferenceValue="true"
         textStylePreferenceValue="PROBLEM_UNDERLINE"
         verticalRulerPreferenceKey="ilorg.spartan.refactoring.spartanizationMarker.ruler"
         verticalRulerPreferenceValue="true">
   </specification>
</extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="ilorg.spartan.commands.category"
            name="Spartanization Category">
      </category>
      <command
            categoryId="ilorg.spartan.commands.category"
            id="ilorg.spartan.commands.ToggleCommand"
            name="Toggle Automatic Spartanization Suggestion">
            <state
           		class="org.eclipse.ui.handlers.RegistryToggleState:true"
           		id="org.eclipse.ui.commands.toggleState">
            </state>
      </command>
      <category
            id="ilorg.spartan.refactoring.category"
            name="Spartan Refactoring">
      </category>
      <command
            categoryId="ilorg.spartan.refactoring.category"
            id="ilorg.spartan.refactoring.commands.ShortestOperand"
            name="Shortest operand first">
      </command>
      <command
            categoryId="ilorg.spartan.refactoring.category"
            id="ilorg.spartan.refactoring.commands.ExtractMethod"
            name="Extract statements to new method">
      </command>
      <command
            categoryId="ilorg.spartan.refactoring.category"
            id="ilorg.spartan.refactoring.commands.ForwardDeclaraion"
            name="Forward declaration">
      </command>
      <command
            categoryId="ilorg.spartan.refactoring.category"
            id="ilorg.spartan.refactoring.commands.InlineSingleUse"
            name="Inline single use">
      </command>
      <command
            categoryId="ilorg.spartan.refactoring.category"
            id="ilorg.spartan.refactoring.commands.RedundantEquality"
            name="Redandant equality">
      </command>
      <command
            categoryId="ilorg.spartan.refactoring.category"
            id="ilorg.spartan.refactoring.commands.ShortestBranchFirst"
            name="Shortest branch first">
      </command>
      <command
            categoryId="ilorg.spartan.refactoring.category"
            id="ilorg.spartan.refactoring.commands.Cleanup"
            name="Spartanize entire project">
      </command>
      <command
            categoryId="ilorg.spartan.refactoring.category"
            id="ilorg.spartan.refactoring.commands.ApplySpartanization"
            name="Spartanize active window">
      </command>
   </extension>
   <extension point="org.eclipse.ui.handlers">
      <handler
            class="il.org.spartan.refactoring.handlers.ToggleSpartanizationHandler"
            commandId="ilorg.spartan.commands.ToggleCommand">
      </handler>
      <handler
            class="il.org.spartan.refactoring.handlers.CleanupHandler"
            commandId="ilorg.spartan.refactoring.commands.Cleanup">
      </handler>
      <handler
            class="il.org.spartan.refactoring.handlers.ApplySpartanizationHandler"
            commandId="ilorg.spartan.refactoring.commands.ApplySpartanization">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="ilorg.spartan.refactoring.toolbars.spartanToolbar">
            <command
                  commandId="ilorg.spartan.refactoring.commands.ApplySpartanization"
                  icon="src/main/icons/spartan-warrior.gif"
                  tooltip="Spartanize this file"
                  id="ilorg.spartan.refactoring.toolbars.ApplySpartanization">
            </command>
         </toolbar>
      </menuContribution>
      
      <menuContribution
            allPopups="true"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               id="ilorg.spartan.menus.spartanization"
               label="Spartanization"
               mnemonic="S">
            <command
                  commandId="ilorg.spartan.commands.ToggleCommand"
                  id="ilorg.spartan.menus.toggleCommand"
                  label="Enable Spartanization Suggestions"
                  style="toggle"
                  mnemonic="S">
            </command>
            <visibleWhen>
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <adapt
                        type="org.eclipse.core.resources.IProject">
                  </adapt>
               </iterate>
            </visibleWhen>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?before=navigate">
         <menu
               id="org.eclipse.jdt.ui.refactoring.menu"
               label="Refactor">
            <menu
                  label="Spartanization">

               <command
                     commandId="ilorg.spartan.refactoring.commands.ShortestOperand"
                     id="ilorg.spartan.menus.ShortestOperandCommand"
                     style="push">
               </command>
               <command
                     commandId="ilorg.spartan.refactoring.commands.ExtractMethod"
                     id="ilorg.spartan.menus.ExtractMethodCommand"
                     style="push">
               </command>
               <command
                     commandId="ilorg.spartan.refactoring.commands.ForwardDeclaraion"
                     id="ilorg.spartan.menus.ForwardDeclarationCommand"
                     style="push">
               </command>
               <command
                     commandId="ilorg.spartan.refactoring.commands.InlineSingleUse"
                     id="ilorg.spartan.menus.InlineSingleUseCommand"
                     style="push">
               </command>
               <command
                     commandId="ilorg.spartan.refactoring.commands.RedundantEquality"
                     id="ilorg.spartan.menus.RedundantEqualityCommand"
                     style="push">
               </command>
               <command
                     commandId="ilorg.spartan.refactoring.commands.ShortestBranchFirst"
                     id="ilorg.spartan.menus.ShortestBranchFirstCommand"
                     style="push">
               </command>
               <command
                     commandId="ilorg.spartan.refactoring.commands.Cleanup"
                     id="ilorg.spartan.menus.CleanupCommand"
                     style="push">
               </command>
               <command
                     commandId="ilorg.spartan.refactoring.commands.ApplySpartanization"
                     id="ilorg.spartan.refactoring.menus.ApplySpartanizationCommand"
                     style="push">
               </command>
            </menu>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="true"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               id="org.eclipse.jdt.ui.refactoring.menu2"
               label="Spartanization">
          <command
                  commandId="ilorg.spartan.refactoring.commands.ShortestOperand"
                  style="push">
            </command>
            <command
                  commandId="ilorg.spartan.refactoring.commands.ExtractMethod"
                  style="push">
            </command>
            <command
                  commandId="ilorg.spartan.refactoring.commands.ForwardDeclaraion"
                  style="push">
            </command>
            <command
                  commandId="ilorg.spartan.refactoring.commands.InlineSingleUse"
                  style="push">
            </command>
            <command
                  commandId="ilorg.spartan.refactoring.commands.RedundantEquality"
                  style="push">
            </command>
            <command
                  commandId="ilorg.spartan.refactoring.commands.ShortestBranchFirst"
                  style="push">
            </command>
            <command
                     commandId="ilorg.spartan.refactoring.commands.Cleanup"
                     style="push">
            </command>

            <visibleWhen>
               <and>
                  <with
                        variable="activeEditorInput">
                     <adapt
                           type="org.eclipse.core.resources.IResource">
                        <test
                              forcePluginActivation="true"
                              property="org.eclipse.core.resources.extension"
                              value="java">
                        </test>
                     </adapt>
                  </with>
                  <not>
                     <iterate
                           ifEmpty="true"
                           operator="or">
                        <adapt
                              type="org.eclipse.core.resources.IResource">
                        </adapt>
                     </iterate>
                  </not>
               </and>
            </visibleWhen>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="il.org.spartan.refactoring.preferences.PluginPreferencesPage"
            id="il.org.spartan.refactoring.preferences.PluginPreferencesPage"
            name="Spartanization"
            category="org.eclipse.jdt.ui.preferences.JavaBasePreferencePage">
      </page>
   </extension>
   <extension
         id="id1"
         point="org.eclipse.core.resources.markers">
   </extension>
   <extension
	         point="org.eclipse.core.runtime.preferences">
	         <scope name="PluginPreferencesPage" class="il.org.spartan.refactoring.preferences.PluginPreferencesPage"/>
	      <initializer
	            class="il.org.spartan.refactoring.preferences.PluginPreferencesDefaultValuesInitializer">
	      </initializer>
	</extension>
</plugin>
